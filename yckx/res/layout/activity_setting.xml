<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical" >

    <include layout="@layout/include_actionbar" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#727272" />

    <RelativeLayout
        android:id="@+id/userName_layout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/home_entry_item" >

        <com.brother.yckx.view.image2.CacheCircleImageView
            android:id="@+id/touxiang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_default_user" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/touxiang"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/touxiang"
            android:text="@string/userName" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="31dp"
            android:src="@drawable/icon_detail_darkgray" />

        <TextView
            android:layout_marginLeft="19dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/touxiang"
            android:id="@+id/newfunction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/touxiang"
            android:text="@string/newfunction" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/modify_pwd_layout"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/home_entry_item" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text="@string/modify_pwd" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:src="@drawable/icon_detail_darkgray" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="50dp"
        android:background="#F4F4F4" />

    <RelativeLayout
        android:id="@+id/user_agreement_layout"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@drawable/home_entry_item" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text="@string/user_agreement" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:src="@drawable/icon_detail_darkgray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/newuser_lead_layout"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/home_entry_item" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text="@string/newuser_lead" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:src="@drawable/icon_detail_darkgray" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="50dp"
        android:background="#F4F4F4" />

    <RelativeLayout
        android:id="@+id/CustomerService_layout"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@drawable/home_entry_item" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text="@string/customerService" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:src="@drawable/icon_detail_darkgray" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="#F4F4F4" />

    <RelativeLayout
        android:id="@+id/layout_exit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/home_entry_item" >

        <TextView
            android:id="@+id/exit_login"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/exit_login" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="50dp"
        android:background="#F4F4F4" />

</LinearLayout>