<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F6F6" >
    
    <RelativeLayout 
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <LinearLayout 
            android:id="@+id/layout_return"
            android:layout_centerVertical="true"
            android:layout_width="35dp"
            android:layout_height="wrap_content">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_defalut_return"/>
        </LinearLayout>
        <TextView 
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑资料"/>
        <TextView 
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:id="@+id/btnsave"
            android:gravity="center"
            android:text="保存"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:background="#78CA1F"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/layout_headImg"
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
       android:background="@drawable/home_entry_item">
        <TextView 
            android:textColor="#999999"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"/>
        <LinearLayout 
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.brother.yckx.view.image2.CacheCircleImageView
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:id="@+id/userImg"
                android:src="@drawable/icon_user"/>
            <ImageView 
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_defalut_to"/>
        </LinearLayout>
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
    <RelativeLayout 
        android:id="@+id/layout_nickname"
        android:padding="10dp"
         android:background="@drawable/home_entry_item"
        android:layout_width="fill_parent"
        android:layout_height="60dp">
        <TextView 
            android:textColor="#999999"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"/>
        <LinearLayout 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/tv_nickname"
                android:textColor="#999999"
                android:text="取个有逼格的名字吧"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView 
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_defalut_to"/>
        </LinearLayout>
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
    <RelativeLayout 
        android:id="@+id/layout_sex"
        android:padding="10dp"
         android:background="@drawable/home_entry_item"
        android:layout_width="fill_parent"
        android:layout_height="60dp">
        <TextView 
            android:textColor="#999999"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"/>
        <LinearLayout 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/tv_sex"
                android:textColor="#999999"
                android:text="请选择"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView 
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_defalut_to"/>
        </LinearLayout>
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
    <RelativeLayout 
        android:id="@+id/layout_age"
        android:padding="10dp"
         android:background="@drawable/home_entry_item"
        android:layout_width="fill_parent"
        android:layout_height="60dp">
        <TextView 
            android:textColor="#999999"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄"/>
        <LinearLayout 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/tv_age"
                android:textColor="#999999"
                android:text="请选择"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView 
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_defalut_to"/>
        </LinearLayout>
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
    <RelativeLayout 
        android:id="@+id/layout_phone"
        android:padding="10dp"
         android:background="@drawable/home_entry_item"
        android:layout_width="fill_parent"
        android:layout_height="60dp">
        <TextView 
            android:textColor="#999999"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"/>
        <LinearLayout 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_gravity="center"
                android:hint="123***6789"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
    
     <RelativeLayout 
        android:id="@+id/layout_sign "
        android:padding="10dp"
         android:background="@drawable/home_entry_item"
        android:layout_width="fill_parent"
        android:layout_height="60dp">
        <TextView 
            android:textColor="#999999"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的签名"/>
        <LinearLayout 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/tv_sign"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_gravity="center"
                android:hint="请填写"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView 
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_defalut_to"/>
        </LinearLayout>
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
     <RelativeLayout 
         android:id="@+id/layout_hangye"
        android:padding="10dp"
         android:background="@drawable/home_entry_item"
        android:layout_width="fill_parent"
        android:layout_height="60dp">
        <TextView 
            android:textColor="#999999"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所处行业"/>
        <LinearLayout 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/tv_hangye"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_gravity="center"
                android:hint="请选择"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView 
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_defalut_to"/>
        </LinearLayout>
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>

</LinearLayout>
