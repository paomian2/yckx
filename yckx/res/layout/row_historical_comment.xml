<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:minHeight="30dp"
    android:background="@color/white" >

    <com.brother.yckx.view.CircleImageView
        android:id="@+id/img_head"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/test_fragment_wowo_useimg" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_head" >

        <RelativeLayout
            android:id="@+id/layout_first"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_commenterName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李世民" />

                <ImageView
                    android:id="@+id/img_commenterSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_defalut_sex_0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_star1"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/icon_evaluate_normal" />

                    <ImageView
                        android:id="@+id/img_star2"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/icon_evaluate_normal" />

                    <ImageView
                        android:id="@+id/img_star3"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/icon_evaluate_normal" />

                    <ImageView
                        android:id="@+id/img_star4"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/icon_evaluate_normal" />

                    <ImageView
                        android:id="@+id/img_star5"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/icon_evaluate_normal" />
                    <TextView 
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4分"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/layout_stars"
                android:layout_marginTop="10dp"
                android:background="@color/gray" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_commentTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_first"
            android:layout_marginTop="5dp"
            android:text="真正懂得的人，这是一个逼格的世界." />

        <LinearLayout
            android:id="@+id/layout_second"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_commentTxt"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:visibility="gone"
                android:scaleType="fitXY"
                android:id="@+id/img_commentImg1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/test_fragment_wowo_useimg" />

            <ImageView
                android:visibility="gone"
                 android:scaleType="fitXY"
                android:id="@+id/img_commentImg2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/test_fragment_wowo_useimg" />

            <FrameLayout
                android:id="@+id/layout_img_commentImg3"
                android:visibility="gone"
                android:layout_width="65dp"
                android:layout_height="65dp" >

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/img_commentImg3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/test_fragment_wowo_useimg" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layout_commentImgMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_commentImgMore"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/test_business_hone_activity_picture_group" />

                    <TextView
                        android:id="@+id/tv_commentImgCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="@color/white" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        
        <RelativeLayout 
            android:layout_below="@+id/layout_second"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:id="@+id/tv_commentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="2016-04-06" />
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">
                <ImageView 
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/icon_defalut_praise"/>
                <TextView 
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/gray"
                    android:id="@+id/tv_commentPraiseCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"/>
                
                <ImageView 
                    android:layout_marginLeft="10dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/icon_defalut_recoment"/>
                <TextView 
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/gray"
                    android:id="@+id/tv_commentRecommetCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"/>
            </LinearLayout>
        </RelativeLayout>
        
    </RelativeLayout>

</RelativeLayout>