<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <LinearLayout 
            android:layout_width="70dp"
            android:layout_height="wrap_content">
            <TextView 
                android:id="@+id/monthBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="30dp"/>
            <TextView 
                android:id="@+id/monthSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="15dp"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:textSize="13dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/newsImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_news"/>
        <LinearLayout 
            android:layout_marginLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <LinearLayout 
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView 
                    android:ellipsize="end"
                    android:text="这是一个猪的世界这是一个猪的世界这是一个猪的世界这是一个猪的世界这是一个猪的世界这是一个猪的世界这是一个猪的世界这是一个猪的世界这是一个猪的世界这是一个猪的世界"
                    android:id="@+id/newsTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout 
                android:id="@+id/layout_newsTag"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">
                <TextView 
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="供"
                    android:id="@+id/newsTag"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_defalut_color_blue"/>
                <TextView 
                    android:id="@+id/keyword1"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="西装"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
                <TextView 
                    android:id="@+id/keyword2"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="西装"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
                <TextView 
                    android:id="@+id/keyword3"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="西装"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    

</LinearLayout>
