<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <RelativeLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/tv_phone"
                android:paddingLeft="20.0dip"
                android:background="@drawable/home_entry_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="20dip">
                <ImageView 
                    android:id="@+id/imgPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_my_order"/>
                <TextView 
                    android:id="@+id/phone_tv"
                    android:layout_marginLeft="20.0dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgPhone"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拨打电话"/>
                <ImageView 
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:background="@drawable/icon_detail_darkgray"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#F5F5F5" />
            </LinearLayout>
          
            
            <RelativeLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/tv_yuyin"
                android:paddingLeft="20.0dip"
                android:background="@drawable/home_entry_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="20dip">
                <ImageView 
                    android:id="@+id/imgyuyin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_my_location"/>
                <TextView 
                    android:layout_marginLeft="20.0dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgyuyin"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发送语音"/>
                <ImageView 
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:background="@drawable/icon_detail_darkgray"/>
            </RelativeLayout>
            
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#F5F5F5" />
            </LinearLayout>
            
            <RelativeLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/tv_car_location"
                android:paddingLeft="20.0dip"
                 android:background="@drawable/home_entry_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="20dip">
                <ImageView 
                    android:id="@+id/imgcar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_my_car"/>
                <TextView 
                    android:id="@+id/car_tv"
                    android:layout_marginLeft="20.0dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgcar"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="定位车辆"/>
                <ImageView 
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:background="@drawable/icon_detail_darkgray"/>
            </RelativeLayout>
            
            
            
             <RelativeLayout
                 android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/tv_notice_arrive"
                android:paddingLeft="20.0dip"
                 android:background="@drawable/home_entry_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="20dip">
                <ImageView 
                    android:id="@+id/imgarrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_my_feedback"/>
                <TextView 
                    android:id="@+id/arrive_tv"
                    android:layout_toRightOf="@+id/imgarrive"
                    android:layout_marginLeft="20.0dip"
                    android:layout_centerVertical="true"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通知用户我已经到达"/>
                <ImageView 
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:background="@drawable/icon_detail_darkgray"/>
            </RelativeLayout>
            


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@color/white" >

                <LinearLayout
                    android:id="@+id/layout_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:paddingLeft="20dp" >

                    <TextView
                        android:id="@+id/tv_car_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="检查车辆" />

                    <TextView
                        android:gravity="center"
                        android:id="@+id/btn_load"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/edit_background_red"
                        android:text="确认上传" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_image_toadd" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img3"
                    android:src="@drawable/icon_image_toadd" />

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img2"
                    android:src="@drawable/icon_image_toadd" />
            </RelativeLayout>
            
            
            
            <RelativeLayout
                 android:background="@drawable/home_entry_item"
                 android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/tv_washing"
                android:paddingLeft="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="20dip">
                <ImageView 
                    android:id="@+id/imgwashing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_my_order"/>
                <TextView 
                    android:id="@+id/washing_tv"
                    android:layout_toRightOf="@+id/imgwashing"
                    android:layout_marginLeft="20.0dip"
                    android:layout_centerVertical="true"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通知用户正在清洗"/>
                <ImageView 
                    android:id="@+id/imgRight_washing"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dip"
                    android:layout_height="20dip"/>
            </RelativeLayout>
            
            
            <RelativeLayout
                 android:background="@drawable/home_entry_item"
                 android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/tv_washe_finish"
                android:paddingLeft="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="20dip">
                <ImageView 
                    android:id="@+id/imwashfinish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_my_feedback"/>
                <TextView 
                    android:id="@+id/finish_tv"
                    android:layout_toRightOf="@+id/imwashfinish"
                    android:layout_marginLeft="20.0dip"
                    android:layout_centerVertical="true"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通知用户清洗完"/>
                <ImageView 
                    android:id="@+id/imgRight_washfinish"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dip"
                    android:layout_height="20dip"/>
            </RelativeLayout>
            

            
            <RelativeLayout
                 android:background="@drawable/home_entry_item"
                 android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/tv_greeto_cancle"
                android:paddingLeft="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="20dip">
                <ImageView 
                    android:id="@+id/imwash_agreento_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_my_aboutus"/>
                <TextView 
                    android:layout_toRightOf="@+id/imwash_agreento_cancel"
                    android:layout_marginLeft="20.0dip"
                    android:layout_centerVertical="true"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户同意取消"/>
                <ImageView 
                    android:id="@+id/imgRight_wash_agreeto_cancel"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dip"
                    android:layout_height="20dip"/>
            </RelativeLayout>
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="10dp"></LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>